<Window x:Class="Assy.Views.TargetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assy.Views"
        mc:Ignorable="d"
        Title="Set Production Target"
        WindowState="Normal"
        Width="950"
        Height="600"
    WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResizeWithGrip">

    <!-- BACKGROUND HIGH CONTRAST -->
    <Window.Background>
        <SolidColorBrush Color="#1E3A8A"/>
    </Window.Background>

    <Grid>
        <!-- Main Container dengan background sangat terang -->
        <Border Background="#FFFFFF" 
                CornerRadius="15" 
                BorderBrush="#000000"
                BorderThickness="2"
                Margin="15"
            VerticalAlignment="Top">

            <!-- Grid utama -->
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- HEADER -->
                <Border Grid.Row="0" 
                        Background="#1E40AF" 
                        CornerRadius="10"
                        Padding="15,12"
                    Margin="0,0,0,10">
                    <!-- Kurangi margin -->
                    <StackPanel>
                        <TextBlock Text="⚙️ SET PRODUCTION TARGET" 
                                   FontSize="24"
                                   FontWeight="Black"
                                   Foreground="#FFFFFF"
                                   TextAlignment="Center"/>

                        <TextBlock Text="Configure your production target before starting"
                                   FontSize="12"
                                   FontWeight="Bold"
                                   Foreground="#FEF3C7"
                                   Margin="0,5,0,0"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- INFO CARDS dengan Icon -->
                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Operator Card -->
                    <Border Grid.Column="0" 
            Background="#F0F9FF" 
            CornerRadius="8" 
            Padding="10"
            Margin="0,0,5,0"
            BorderBrush="#0369A1"
            BorderThickness="2">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,0,0,4">
                                <TextBlock Text="👨‍🔧" 
                           FontSize="14"
                           Margin="0,0,5,0"/>
                                <TextBlock Text="OPERATOR" 
                           FontSize="12"
                           FontWeight="Bold"
                           Foreground="#0C4A6E"/>
                            </StackPanel>
                            <Border Background="#FFFFFF" 
                    CornerRadius="5"
                    Padding="6,4"
                    BorderBrush="#0284C7"
                    BorderThickness="1"
                    MinHeight="35">
                                <TextBlock x:Name="txtOperator" 
                           FontSize="13"
                           FontWeight="Bold"
                           Foreground="#1E40AF"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Supervisor Card -->
                    <Border Grid.Column="1" 
            Background="#F0F9FF" 
            CornerRadius="8" 
            Padding="10"
            Margin="5,0,5,0"
            BorderBrush="#0369A1"
            BorderThickness="2">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,0,0,4">
                                <TextBlock Text="👨‍💼" 
                           FontSize="14"
                           Margin="0,0,5,0"/>
                                <TextBlock Text="SUPERVISOR" 
                           FontSize="12"
                           FontWeight="Bold"
                           Foreground="#0C4A6E"/>
                            </StackPanel>
                            <Border Background="#FFFFFF" 
                    CornerRadius="5"
                    Padding="6,4"
                    BorderBrush="#0284C7"
                    BorderThickness="1"
                    MinHeight="35">
                                <TextBlock x:Name="txtSupervisor" 
                           FontSize="13"
                           FontWeight="Bold"
                           Foreground="#1E40AF"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Machine Card -->
                    <Border Grid.Column="2" 
            Background="#F0F9FF" 
            CornerRadius="8" 
            Padding="10"
            Margin="5,0,5,0"
            BorderBrush="#0369A1"
            BorderThickness="2">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,0,0,4">
                                <TextBlock Text="⚙️" 
                           FontSize="14"
                           Margin="0,0,5,0"/>
                                <TextBlock Text="MACHINE" 
                           FontSize="12"
                           FontWeight="Bold"
                           Foreground="#0C4A6E"/>
                            </StackPanel>
                            <Border Background="#FFFFFF" 
                    CornerRadius="5"
                    Padding="6,4"
                    BorderBrush="#0284C7"
                    BorderThickness="1"
                    MinHeight="35">
                                <TextBlock x:Name="txtMachine" 
                           FontSize="13"
                           FontWeight="Bold"
                           Foreground="#1E40AF"
                           TextAlignment="Center"
                           VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Part No Card -->
                    <Border Grid.Column="3" 
            Background="#F0F9FF" 
            CornerRadius="8" 
            Padding="10"
            Margin="5,0,0,0"
            BorderBrush="#0369A1"
            BorderThickness="2">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,0,0,4">
                                <TextBlock Text="📦" 
                           FontSize="14"
                           Margin="0,0,5,0"/>
                                <TextBlock Text="PART NO" 
                           FontSize="12"
                           FontWeight="Bold"
                           Foreground="#0C4A6E"/>
                            </StackPanel>
                            <Border Background="#FFFFFF" 
                    CornerRadius="5"
                    Padding="6,4"
                    BorderBrush="#0284C7"
                    BorderThickness="1"
                    MinHeight="35">
                                <TextBlock x:Name="txtPartNo" 
                           FontSize="13"
                           FontWeight="Bold"
                           Foreground="#1E40AF"
                           TextAlignment="Center"
                           VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- TARGET INPUT -->
                <Border Grid.Row="2" 
                        Background="#FFFBEB" 
                        CornerRadius="10"
                        Padding="12"
                        Margin="0,0,0,10"
                        BorderBrush="#D97706"
                        BorderThickness="2">
                    <StackPanel>
                        <TextBlock Text="🎯 TARGET PER SHIFT" 
                                   FontSize="18"
                                   FontWeight="Black"
                                   Foreground="#92400E"
                                   Margin="0,0,0,8"
                                   HorizontalAlignment="Center"/>

                        <Border x:Name="targetInputBorder"
                                BorderBrush="#DC2626" 
                                BorderThickness="2" 
                                CornerRadius="8"
                                Background="#FFFFFF"
                                Height="60"
                                VerticalAlignment="Center"
                                Margin="0,0,0,6">
                            <TextBox x:Name="txtTarget" 
                                     FontSize="28"
                                     FontWeight="Black"
                                     TextAlignment="Center"
                                     VerticalAlignment="Center"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="12"
                                     PreviewTextInput="txtTarget_PreviewTextInput"
                                     MaxLength="6"
                                     TextChanged="txtTarget_TextChanged"
                                     KeyDown="txtTarget_KeyDown"
                                     LostFocus="txtTarget_LostFocus">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Foreground" Value="#1E3A8A"/>
                                        <Setter Property="CaretBrush" Value="#DC2626"/>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </Border>

                        <TextBlock Text="Enter the total production target for this shift"
                                   FontSize="11"
                                   FontWeight="SemiBold"
                                   Foreground="#78350F"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- SHIFT SELECTION -->
                <Border Grid.Row="3" 
                        Background="#F0F9FF" 
                        CornerRadius="10"
                        Padding="15"
                        Margin="0,0,0,10"
                        BorderBrush="#0369A1"
                        BorderThickness="2">
                    <StackPanel>
                        <TextBlock Text="⏰ SELECT SHIFT" 
                                   FontSize="20"
                                   FontWeight="Black"
                                   Foreground="#0C4A6E"
                                   Margin="0,0,0,12"
                                   HorizontalAlignment="Center"/>

                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                            <!-- Shift 1 Button -->
                            <Button x:Name="btnShift1" 
                                    Tag="1"
                                    Width="200"
                                    Height="80"
                                    Margin="0,0,15,0"
                                    Click="Shift1_Click">
                                <StackPanel>
                                    <TextBlock Text="SHIFT 1" 
                                               FontSize="20"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <!-- Shift 2 Button -->
                            <Button x:Name="btnShift2" 
                                    Tag="2"
                                    Width="200"
                                    Height="80"
                                    Click="Shift2_Click">
                                <StackPanel>
                                    <TextBlock Text="SHIFT 2" 
                                               FontSize="20"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- START BUTTON - Tanpa Border, langsung Button -->
                <Button Grid.Row="4" 
                        x:Name="btnStart" 
                       Content="🚀 START PRODUCTION" 
                       Width="250"
                       Height="60"
                       FontSize="16"
                       FontWeight="Black"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top" 
                    Margin="0,10,0,5"
                    Click="btnStart_Click"
                       IsEnabled="False">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#DC2626"/>
                            <Setter Property="BorderBrush" Value="#FFFFFF"/>
                            <Setter Property="BorderThickness" Value="2"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#9CA3AF"/>
                                    <Setter Property="BorderBrush" Value="#6B7280"/>
                                    <Setter Property="Foreground" Value="#4B5563"/>
                                    <Setter Property="Cursor" Value="Arrow"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#B91C1C"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#991B1B"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>