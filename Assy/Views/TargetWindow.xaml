<Window x:Class="Assy.TargetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Set Production Target"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        MinWidth="800"
        MinHeight="600">

    <Grid Background="#0078D4">
        <!-- Main Container -->
        <Border Background="White" 
                CornerRadius="20" 
                Width="800" 
                Height="600"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" 
                                 BlurRadius="30" 
                                 Color="#40000000"/>
            </Border.Effect>

            <Grid Margin="40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,30">
                    <TextBlock Text="⚙️ SET PRODUCTION TARGET" 
                               FontSize="28" 
                               FontWeight="Bold"
                               Foreground="#0078D4"/>

                    <TextBlock Text="Configure your production target before starting"
                               FontSize="14"
                               Foreground="#666666"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <!-- User Info -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
                    <Border Background="#F0F8FF" 
                            CornerRadius="10" 
                            Padding="15,10">
                        <StackPanel>
                            <TextBlock Text="👨‍💼 Supervisor:" 
                                       FontSize="12" 
                                       Foreground="#666666"/>
                            <TextBlock x:Name="txtSupervisor" 
                                       FontSize="14" 
                                       FontWeight="Bold"
                                       Foreground="#0078D4"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#F0F8FF" 
                            CornerRadius="10" 
                            Padding="15,10"
                            Margin="10,0,0,0">
                        <StackPanel>
                            <TextBlock Text="⚙️ Machine:" 
                                       FontSize="12" 
                                       Foreground="#666666"/>
                            <TextBlock x:Name="txtMachine" 
                                       FontSize="14" 
                                       FontWeight="Bold"
                                       Foreground="#0078D4"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#F0F8FF" 
                            CornerRadius="10" 
                            Padding="15,10"
                            Margin="10,0,0,0">
                        <StackPanel>
                            <TextBlock Text="📦 Part No:" 
                                       FontSize="12" 
                                       Foreground="#666666"/>
                            <TextBlock x:Name="txtPartNo" 
                                       FontSize="14" 
                                       FontWeight="Bold"
                                       Foreground="#0078D4"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Target Input -->
                <StackPanel Grid.Row="2" Margin="0,0,0,20">
                    <Label Content="🎯 TARGET PER SHIFT:" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Foreground="#333333"/>

                    <!-- TextBox dengan Border untuk corner radius -->
                    <Border BorderBrush="#0078D4" 
                            BorderThickness="2" 
                            CornerRadius="10"
                            Background="White"
                            Height="60"
                            VerticalAlignment="Center">
                        <TextBox x:Name="txtTarget" 
                                 FontSize="24" 
                                 FontWeight="Bold"
                                 TextAlignment="Center"
                                 VerticalAlignment="Center"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="10"
                                 PreviewTextInput="txtTarget_PreviewTextInput"
                                 MaxLength="6"
                                 TextChanged="txtTarget_TextChanged"
                                 KeyDown="txtTarget_KeyDown">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Foreground" Value="#333333"/>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Border>

                    <TextBlock Text="Enter the total production target for this shift"
                               FontSize="12"
                               Foreground="#666666"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Shift Selection -->
                <StackPanel Grid.Row="3" Margin="0,0,0,30">
                    <Label Content="⏰ SELECT SHIFT:" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Foreground="#333333"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <!-- Shift 1 Button -->
                        <Border x:Name="borderShift1" 
                                Background="#0078D4"
                                CornerRadius="10"
                                Width="180"
                                Height="70"
                                Margin="0,0,10,0"
                                Cursor="Hand"
                                MouseLeftButtonDown="Shift1_MouseLeftButtonDown">
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="SHIFT 1" 
                                           FontSize="18" 
                                           FontWeight="Bold"
                                           Foreground="White"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="08:00 - 16:00" 
                                           FontSize="14"
                                           Foreground="#CCCCCC"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Shift 2 Button -->
                        <Border x:Name="borderShift2" 
                                Background="#E0E0E0"
                                CornerRadius="10"
                                Width="180"
                                Height="70"
                                Cursor="Hand"
                                MouseLeftButtonDown="Shift2_MouseLeftButtonDown">
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="SHIFT 2" 
                                           FontSize="18" 
                                           FontWeight="Bold"
                                           Foreground="#666666"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="16:00 - 00:00" 
                                           FontSize="14"
                                           Foreground="#999999"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- Button dengan ControlTemplate yang include Border -->
                    <Button x:Name="btnStart" 
                           Content="🚀 START PRODUCTION" 
                           Width="250"
                           Height="50"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="White"
                           BorderThickness="0"
                           Click="btnStart_Click"
                           IsEnabled="False">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <!-- Border sebagai background button -->
                                            <Border x:Name="borderButton" 
                                                    Background="#0078D4" 
                                                    CornerRadius="8"
                                                    Width="250"
                                                    Height="50">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <!-- Trigger untuk disabled state -->
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter TargetName="borderButton" Property="Background" Value="#CCCCCC"/>
                                                    <Setter Property="Foreground" Value="#999999"/>
                                                    <Setter Property="Cursor" Value="Arrow"/>
                                                </Trigger>
                                                <!-- Trigger untuk mouse over -->
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="borderButton" Property="Background" Value="#005A9E"/>
                                                </Trigger>
                                                <!-- Trigger untuk pressed -->
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="borderButton" Property="Background" Value="#004578"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>