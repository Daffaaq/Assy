<Window x:Class="Assy.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assy.Views"
        mc:Ignorable="d"
        Title="Login - Assembly System"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#1F2937"/>
            <Setter Property="BorderBrush" Value="#94A3B8"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#1D4ED8"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#1F2937"/>
            <Setter Property="BorderBrush" Value="#94A3B8"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Modern DatePicker Style -->
        <Style x:Key="ModernDatePicker" TargetType="DatePicker">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#1F2937"/>
            <Setter Property="BorderBrush" Value="#94A3B8"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Modern Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#1D4ED8"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="20,0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1E40AF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1E3A8A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Split Layout: Sidebar Kiri + Form Kanan -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR KIRI - Brand Area -->
        <Border Grid.Column="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#1E3A8A" Offset="0"/>
                    <GradientStop Color="#1E40AF" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <!-- Background Pattern -->
            <Grid>
                <!-- Pattern Circles -->
                <Canvas Opacity="0.15">
                    <Ellipse Width="300" Height="300" 
                            Canvas.Left="-100" Canvas.Top="-100"
                            Fill="#3B82F6"/>
                    <Ellipse Width="200" Height="200" 
                            Canvas.Right="-50" Canvas.Bottom="100"
                            Fill="#3B82F6"/>
                    <Ellipse Width="150" Height="150" 
                            Canvas.Left="50" Canvas.Bottom="-50"
                            Fill="#3B82F6"/>
                </Canvas>

                <!-- Content -->
                <StackPanel VerticalAlignment="Center" 
                           HorizontalAlignment="Center" 
                           Margin="40">
                    <!-- Logo -->
                    <Viewbox Width="100" Height="100" Margin="0,0,0,30">
                        <Image Source="/img/logoipg.ico" 
           Stretch="Uniform"
           VerticalAlignment="Center"
           HorizontalAlignment="Center"/>
                    </Viewbox>
                    

                    <!-- App Name -->
                    <TextBlock Text="ASSEMBLY" 
                              FontSize="42" 
                              FontWeight="Bold" 
                              Foreground="White"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,5"/>

                    <TextBlock Text="SYSTEM" 
                              FontSize="42" 
                              FontWeight="Bold" 
                              Foreground="White"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,30"/>

                    <!-- Tagline -->
                    <TextBlock Text="Industrial Excellence" 
                              FontSize="18" 
                              FontWeight="Medium"
                              Foreground="#BFDBFE"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,10"/>

                    <TextBlock Text="Monitor • Control • Report" 
                              FontSize="14" 
                              Foreground="#93C5FD"
                              HorizontalAlignment="Center"
                              FontStyle="Italic"/>

                    <!-- Divider -->
                    <Rectangle Height="2" 
                             Fill="#BFDBFE" 
                             Margin="0,40,0,30"
                             Opacity="0.5"/>

                    <!-- System Info -->
                    <StackPanel>
                        <TextBlock Text="📊 SYSTEM STATUS" 
                                  FontSize="14" 
                                  FontWeight="SemiBold"
                                  Foreground="White"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,9"/>
                        
                        <Border Background="#40FFFFFF" 
                                CornerRadius="8" 
                                Padding="15,10">
                            <StackPanel>
                                <TextBlock x:Name="txtSidebarTime" 
                                          FontSize="12" 
                                          Foreground="White"
                                          FontWeight="SemiBold"/>
                                <TextBlock Text="Current server time" 
                                          FontSize="11" 
                                          Foreground="#BFDBFE"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Version -->
                    <TextBlock Text="v2.0.0" 
                              FontSize="12" 
                              Foreground="#93C5FD"
                              HorizontalAlignment="Center"
                              Margin="0,40,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- KANAN - Login Form Area -->
        <Grid Grid.Column="1">
            <!-- Background Pattern -->
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#F0F4F8" Offset="0"/>
                    <GradientStop Color="#E2E8F0" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <!-- Pattern Dots -->
            <Canvas Opacity="0.1">
                <Ellipse Width="12" Height="12" Fill="#3B82F6" Canvas.Left="100" Canvas.Top="100"/>
                <Ellipse Width="10" Height="10" Fill="#3B82F6" Canvas.Left="300" Canvas.Top="200"/>
                <Ellipse Width="8" Height="8" Fill="#3B82F6" Canvas.Left="500" Canvas.Top="150"/>
                <Ellipse Width="9" Height="9" Fill="#3B82F6" Canvas.Left="700" Canvas.Top="250"/>
                <Ellipse Width="11" Height="11" Fill="#3B82F6" Canvas.Left="900" Canvas.Top="180"/>
            </Canvas>

            <!-- Main Form Container -->
            <Border VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    Width="600"
                    Background="White"
                    CornerRadius="12"
                    Padding="50,40"
                    BorderBrush="#CBD5E1"
                    BorderThickness="2">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="3" 
                                     BlurRadius="25" 
                                     Color="#40000000"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Form Header -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,30">
                        <TextBlock Text="Login to System" 
                                  FontSize="28" 
                                  FontWeight="Bold"
                                  Foreground="#1E293B"/>
                    </StackPanel>

                    <!-- Tanggal Hari Ini -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
                        <Label Content="📅" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"
                               Foreground="#1D4ED8"/>
                        <Label Content="Tanggal:" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="#1E293B"
                               VerticalAlignment="Center"
                               Width="150"/>
                        <DatePicker x:Name="dpTanggal"
                                   IsEnabled="False"
                                   Style="{StaticResource ModernDatePicker}"
                                   VerticalAlignment="Center"
                                   Width="300"/>
                    </StackPanel>

                    <!-- No Register -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,15">
                        <Label Content="🔢" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"
                               Foreground="#1D4ED8"/>
                        <Label Content="No. Register:" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="#1E293B"
                               VerticalAlignment="Center"
                               Width="150"/>
                        <TextBox x:Name="txtNoRegister" 
                                Style="{StaticResource ModernTextBox}"
                                VerticalAlignment="Center"
                                Width="300"
                                Background="White"/>
                    </StackPanel>

                    <!-- Mesin -->
                    <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,15">
                        <Label Content="⚙️" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"
                               Foreground="#1D4ED8"/>
                        <Label Content="Mesin:" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="#1E293B"
                               VerticalAlignment="Center"
                               Width="150"/>
                        <ComboBox x:Name="cbMesin"
                                 Style="{StaticResource ModernComboBox}"
                                 Width="300">
                            <ComboBoxItem Content="LAS01"/>
                            <ComboBoxItem Content="LAS02"/>
                            <ComboBoxItem Content="LAS03"/>
                            <ComboBoxItem Content="LAS04"/>
                            <ComboBoxItem Content="LAS05"/>
                            <ComboBoxItem Content="LAS06"/>
                            <ComboBoxItem Content="LAS07"/>
                            <ComboBoxItem Content="LAS08"/>
                            <ComboBoxItem Content="LAS09"/>
                            <ComboBoxItem Content="LAS10"/>
                            <ComboBoxItem Content="LAS11"/>
                            <ComboBoxItem Content="LAS12"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Supervisor -->
                    <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,0,0,15">
                        <Label Content="👨‍💼" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"
                               Foreground="#1D4ED8"/>
                        <Label Content="Supervisor:" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="#1E293B"
                               VerticalAlignment="Center"
                               Width="150"/>
                        <TextBox x:Name="txtSupervisor"
                                Style="{StaticResource ModernTextBox}"
                                VerticalAlignment="Center"
                                Width="300"
                                Background="White"/>
                    </StackPanel>

                    <!-- Part No -->
                    <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,0,0,25">
                        <Label Content="📦" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"
                               Foreground="#1D4ED8"/>
                        <Label Content="Part No:" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="#1E293B"
                               VerticalAlignment="Center"
                               Width="150"/>
                        <ComboBox x:Name="cbPartNo"
                                 Style="{StaticResource ModernComboBox}"
                                 Width="300">
                            <ComboBoxItem Content="PART-001"/>
                            <ComboBoxItem Content="PART-002"/>
                            <ComboBoxItem Content="PART-003"/>
                            <ComboBoxItem Content="PART-004"/>
                            <ComboBoxItem Content="PART-005"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <Button x:Name="btnLogin" 
           Content="LOGIN TO DASHBOARD"
           Style="{StaticResource PrimaryButton}"
           Width="220"
           FontWeight="Bold"
           Click="btnLogin_Click"
           Margin="0,0,15,0">
                            <Button.Effect>
                                <DropShadowEffect ShadowDepth="2" 
                             BlurRadius="10" 
                             Color="#201D4ED8"/>
                            </Button.Effect>
                        </Button>

                        <!-- Tombol Reset -->
                        <Button x:Name="btnReset" 
           Content="RESET"
           Width="100"
           Height="50"
           FontSize="14"
           FontWeight="SemiBold"
           Click="btnReset_Click"
           Background="Transparent"
           Foreground="#475569"
           BorderBrush="#CBD5E1"
           BorderThickness="2"
           Cursor="Hand"
           Margin="0,0,15,0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" 
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="8"
                        Padding="20,0">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#F1F5F9"/>
                                            <Setter TargetName="border" Property="BorderBrush" Value="#1D4ED8"/>
                                            <Setter Property="Foreground" Value="#1D4ED8"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#E2E8F0"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button x:Name="btnCancel" 
           Content="EXIT"
           Width="100"
           Height="50"
           FontSize="14"
           FontWeight="SemiBold"
           Click="btnCancel_Click"
           Background="Transparent"
           Foreground="#475569"
           BorderBrush="#CBD5E1"
           BorderThickness="2"
           Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" 
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="8"
                        Padding="20,0">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#F1F5F9"/>
                                            <Setter TargetName="border" Property="BorderBrush" Value="#DC2626"/>
                                            <Setter Property="Foreground" Value="#DC2626"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#FEE2E2"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>

                    <!-- Copyright -->
                    <TextBlock Grid.Row="8" 
                              Text="© 2026 Assembly System IPG. All rights reserved."
                              FontSize="11" 
                              Foreground="#94A3B8"
                              HorizontalAlignment="Center"
                              Margin="0,20,0,0"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>