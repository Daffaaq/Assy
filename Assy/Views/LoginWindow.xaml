<Window x:Class="Assy.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assy.Views"
        mc:Ignorable="d"
        Title="Login - Assembly System"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#0078D4"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Modern DatePicker Style -->
        <Style x:Key="ModernDatePicker" TargetType="DatePicker">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Modern Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="20,0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#004578"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Split Layout: Sidebar Kiri + Form Kanan -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR KIRI - Brand Area -->
        <Border Grid.Column="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#0078D4" Offset="0"/>
                    <GradientStop Color="#005A9E" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <!-- Background Pattern -->
            <Grid>
                <!-- Pattern Circles -->
                <Canvas Opacity="0.1">
                    <Ellipse Width="300" Height="300" 
                            Canvas.Left="-100" Canvas.Top="-100"
                            Fill="White"/>
                    <Ellipse Width="200" Height="200" 
                            Canvas.Right="-50" Canvas.Bottom="100"
                            Fill="White"/>
                    <Ellipse Width="150" Height="150" 
                            Canvas.Left="50" Canvas.Bottom="-50"
                            Fill="White"/>
                </Canvas>

                <!-- Content -->
                <StackPanel VerticalAlignment="Center" 
                           HorizontalAlignment="Center" 
                           Margin="40">
                    <!-- Logo -->
                    <Viewbox Width="180" Height="180" Margin="0,0,0,30">
                        <Canvas Width="200" Height="200">
                            <!-- Big Gear -->
                            <Path Fill="White" Data="M100,20 L110,50 L140,50 L150,20 L100,20 Z"/>
                            <Path Fill="White" Data="M100,180 L110,150 L140,150 L150,180 L100,180 Z"/>
                            <Path Fill="White" Data="M20,100 L50,110 L50,140 L20,150 L20,100 Z"/>
                            <Path Fill="White" Data="M180,100 L150,110 L150,140 L180,150 L180,100 Z"/>

                            <!-- Medium Gear -->
                            <Path Fill="#E3F2FD" Data="M70,40 L75,60 L95,60 L100,40 L70,40 Z" 
                                  RenderTransformOrigin="0.5,0.5">
                                <Path.RenderTransform>
                                    <RotateTransform Angle="45"/>
                                </Path.RenderTransform>
                            </Path>
                            <Path Fill="#E3F2FD" Data="M130,160 L125,140 L105,140 L100,160 L130,160 Z"
                                  RenderTransformOrigin="0.5,0.5">
                                <Path.RenderTransform>
                                    <RotateTransform Angle="45"/>
                                </Path.RenderTransform>
                            </Path>

                            <!-- Center Circle -->
                            <Ellipse Fill="#0078D4" Width="80" Height="80" 
                                   Canvas.Left="60" Canvas.Top="60"/>
                            <Ellipse Fill="White" Width="40" Height="40" 
                                   Canvas.Left="80" Canvas.Top="80"/>
                        </Canvas>
                    </Viewbox>

                    <!-- App Name -->
                    <TextBlock Text="ASSEMBLY" 
                              FontSize="42" 
                              FontWeight="Bold" 
                              Foreground="White"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,5"/>

                    <TextBlock Text="SYSTEM" 
                              FontSize="42" 
                              FontWeight="Bold" 
                              Foreground="White"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,30"/>

                    <!-- Tagline -->
                    <TextBlock Text="Industrial Excellence" 
                              FontSize="18" 
                              FontWeight="Medium"
                              Foreground="#E3F2FD"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,10"/>

                    <TextBlock Text="Precision • Quality • Efficiency" 
                              FontSize="14" 
                              Foreground="#BBDEFB"
                              HorizontalAlignment="Center"
                              FontStyle="Italic"/>

                    <!-- Divider -->
                    <Rectangle Height="2" 
                             Fill="#E3F2FD" 
                             Margin="0,40,0,30"
                             Opacity="0.5"/>

                    <!-- System Info -->
                    <StackPanel>
                        <TextBlock Text="📊 SYSTEM STATUS" 
                                  FontSize="14" 
                                  FontWeight="SemiBold"
                                  Foreground="White"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,10"/>

                        <Border Background="#40FFFFFF" 
                                CornerRadius="8" 
                                Padding="15,10"
                                Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="✅ Online" 
                                          FontSize="12" 
                                          Foreground="White"
                                          FontWeight="SemiBold"/>
                                <TextBlock Text="All systems operational" 
                                          FontSize="11" 
                                          Foreground="#E3F2FD"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#40FFFFFF" 
                                CornerRadius="8" 
                                Padding="15,10">
                            <StackPanel>
                                <TextBlock x:Name="txtSidebarTime" 
                                          FontSize="12" 
                                          Foreground="White"
                                          FontWeight="SemiBold"/>
                                <TextBlock Text="Current server time" 
                                          FontSize="11" 
                                          Foreground="#E3F2FD"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Version -->
                    <TextBlock Text="v1.0.0" 
                              FontSize="12" 
                              Foreground="#90CAF9"
                              HorizontalAlignment="Center"
                              Margin="0,40,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- KANAN - Login Form Area -->
        <Grid Grid.Column="1">
            <!-- Background Pattern -->
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#F8F9FA" Offset="0"/>
                    <GradientStop Color="#E9ECEF" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <!-- Pattern Dots -->
            <Canvas Opacity="0.05">
                <Ellipse Width="10" Height="10" Fill="#0078D4" Canvas.Left="100" Canvas.Top="100"/>
                <Ellipse Width="8" Height="8" Fill="#0078D4" Canvas.Left="300" Canvas.Top="200"/>
                <Ellipse Width="6" Height="6" Fill="#0078D4" Canvas.Left="500" Canvas.Top="150"/>
                <Ellipse Width="7" Height="7" Fill="#0078D4" Canvas.Left="700" Canvas.Top="250"/>
                <Ellipse Width="9" Height="9" Fill="#0078D4" Canvas.Left="900" Canvas.Top="180"/>
            </Canvas>

            <!-- Main Form Container -->
            <Border VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    Width="600"
                    Background="White"
                    CornerRadius="12"
                    Padding="50,40">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0" 
                                     BlurRadius="20" 
                                     Color="#10000000"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Form Header -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,30">
                        <TextBlock Text="Login to System" 
                                  FontSize="28" 
                                  FontWeight="Bold"
                                  Foreground="#333333"/>

                        <TextBlock Text="Enter assembly details to continue" 
                                  FontSize="14" 
                                  Foreground="#666666"
                                  Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Tanggal Hari Ini -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
                        <Label Content="📅" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"
                               Foreground="#0078D4"/>
                        <Label Content="Tanggal:" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="#333333"
                               VerticalAlignment="Center"
                               Width="150"/>
                        <DatePicker x:Name="dpTanggal"
                                   IsEnabled="False"
                                   Style="{StaticResource ModernDatePicker}"
                                   VerticalAlignment="Center"
                                   Width="300"/>
                    </StackPanel>

                    <!-- No Register -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,15">
                        <Label Content="🔢" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"
                               Foreground="#0078D4"/>
                        <Label Content="No. Register:" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="#333333"
                               VerticalAlignment="Center"
                               Width="150"/>
                        <TextBox x:Name="txtNoRegister" 
                                Style="{StaticResource ModernTextBox}"
                                VerticalAlignment="Center"
                                Width="300"
                                Background="White"/>
                    </StackPanel>

                    <!-- Mesin -->
                    <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,15">
                        <Label Content="⚙️" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"
                               Foreground="#0078D4"/>
                        <Label Content="Mesin:" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="#333333"
                               VerticalAlignment="Center"
                               Width="150"/>
                        <ComboBox x:Name="cbMesin"
                                 Style="{StaticResource ModernComboBox}"
                                 Width="300">
                            <ComboBoxItem Content="LAS01"/>
                            <ComboBoxItem Content="LAS02"/>
                            <ComboBoxItem Content="LAS03"/>
                            <ComboBoxItem Content="LAS04"/>
                            <ComboBoxItem Content="LAS05"/>
                            <ComboBoxItem Content="LAS06"/>
                            <ComboBoxItem Content="LAS07"/>
                            <ComboBoxItem Content="LAS08"/>
                            <ComboBoxItem Content="LAS09"/>
                            <ComboBoxItem Content="LAS10"/>
                            <ComboBoxItem Content="LAS11"/>
                            <ComboBoxItem Content="LAS12"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Supervisor -->
                    <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,0,0,15">
                        <Label Content="👨‍💼" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"
                               Foreground="#0078D4"/>
                        <Label Content="Supervisor:" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="#333333"
                               VerticalAlignment="Center"
                               Width="150"/>
                        <TextBox x:Name="txtSupervisor"
                                Style="{StaticResource ModernTextBox}"
                                VerticalAlignment="Center"
                                Width="300"
                                Background="White"/>
                    </StackPanel>

                    <!-- Part No -->
                    <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,0,0,25">
                        <Label Content="📦" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"
                               Foreground="#0078D4"/>
                        <Label Content="Part No:" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="#333333"
                               VerticalAlignment="Center"
                               Width="150"/>
                        <ComboBox x:Name="cbPartNo"
                                 Style="{StaticResource ModernComboBox}"
                                 Width="300">
                            <ComboBoxItem Content="PART-001"/>
                            <ComboBoxItem Content="PART-002"/>
                            <ComboBoxItem Content="PART-003"/>
                            <ComboBoxItem Content="PART-004"/>
                            <ComboBoxItem Content="PART-005"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <Button x:Name="btnLogin" 
                               Content="LOGIN TO DASHBOARD"
                               Style="{StaticResource PrimaryButton}"
                               Width="220"
                               FontWeight="Bold"
                               Click="btnLogin_Click"
                               Margin="0,0,15,0">
                            <Button.Effect>
                                <DropShadowEffect ShadowDepth="2" 
                                                 BlurRadius="10" 
                                                 Color="#200078D4"/>
                            </Button.Effect>
                        </Button>

                        <Button x:Name="btnCancel" 
                               Content="EXIT"
                               Width="100"
                               Height="50"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Click="btnCancel_Click"
                               Background="Transparent"
                               Foreground="#6c757d"
                               BorderBrush="#6c757d"
                               BorderThickness="1"
                               Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" 
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="8"
                                            Padding="20,0">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#F8F9FA"/>
                                            <Setter TargetName="border" Property="BorderBrush" Value="#545b62"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#E9ECEF"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>

                    <!-- Copyright -->
                    <TextBlock Grid.Row="8" 
                              Text="© 2026 Assembly System IPG. All rights reserved."
                              FontSize="11" 
                              Foreground="#999999"
                              HorizontalAlignment="Center"
                              Margin="0,20,0,0"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>