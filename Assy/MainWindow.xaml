<Window x:Class="Assy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assy"
        mc:Ignorable="d"
        Title="Assembly System"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        MinWidth="1200"
        MinHeight="700"
        Background="#F0F2F5"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Style untuk Button dengan corner radius -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2980B9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1C5A7A"/>
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style untuk TextBox dengan corner radius -->
        <Style x:Key="RoundedTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="CaretBrush" Value="#2C3E50"/>
            <Setter Property="SelectionBrush" Value="#3498DB"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <!-- Important! -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="5"
                        SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                Focusable="False"
                                HorizontalScrollBarVisibility="Hidden"
                                VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#3498DB"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#2980B9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style untuk Action Button -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter Margin="10,0" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F8F9FA"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#3498DB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style untuk tabel header -->
        <Style x:Key="TableHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Style untuk sel tabel -->
        <Style x:Key="TableCellStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- Style untuk baris tabel -->
        <Style x:Key="TableRowStyle" TargetType="Border">
            <Setter Property="Height" Value="50"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Main Layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Height="70" Padding="0,0,20,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo -->
                <Border Grid.Column="0" Background="#1A252F" Width="70" 
                        HorizontalAlignment="Left">
                    <Viewbox Stretch="Uniform">
                        <TextBlock Text="🏭" FontSize="30" Foreground="White" 
                                   VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Viewbox>
                </Border>

                <!-- Title -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="20,0">
                    <TextBlock Text="ASSEMBLY PRODUCTION SYSTEM" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="Real-time Monitoring Dashboard" 
                               FontSize="12" 
                               Foreground="#BDC3C7"
                               Margin="0,2,0,0"/>
                </StackPanel>

                <!-- User Info & Time -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" 
                            VerticalAlignment="Center" HorizontalAlignment="Right">
                    <!-- Time Display -->
                    <Border Background="#34495E" CornerRadius="15" Padding="12,8" Margin="0,0,15,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🕐" FontSize="14" Foreground="White" 
                                       VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock x:Name="txtDateTime" Text="00:00:00" 
                                       FontSize="14" FontWeight="SemiBold" 
                                       Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- User Profile -->
                    <Border Background="#34495E" CornerRadius="15" Padding="10">
                        <StackPanel Orientation="Horizontal">
                            <!-- Profile Photo (Placeholder) -->
                            <Border Width="40" Height="40" CornerRadius="20" 
                                    Background="#3498DB" Margin="0,0,10,0">
                                <TextBlock Text="👤" FontSize="20" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>

                            <!-- User Details -->
                            <StackPanel>
                                <TextBlock x:Name="txtUserName" Text="Supervisor Name" 
                                           FontSize="14" FontWeight="SemiBold" 
                                           Foreground="White"/>
                                <TextBlock x:Name="txtUserNoreg" Text="Noreg: 000000" 
                                           FontSize="11" Foreground="#BDC3C7"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Production Data -->
            <Grid Grid.Column="0" Margin="0,0,20,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Shift and Machine Info -->
                <Border Grid.Row="0" Background="White" CornerRadius="10" 
                        Padding="20" Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Shift Selection -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="SHIFT" FontSize="12" 
               Foreground="#7F8C8D" FontWeight="SemiBold"/>
                            <Border Background="#3498DB" CornerRadius="5" 
            Padding="10" Margin="0,5,0,0">
                                <TextBlock x:Name="txtShiftInfo" Text="Shift 1 (07:30 - 16:30)" 
                   FontSize="14" FontWeight="Bold" 
                   Foreground="White" HorizontalAlignment="Center"/>
                            </Border>
                        </StackPanel>

                        <!-- Machine Info -->
                        <StackPanel Grid.Column="2" Margin="0,0,0,0">
                            <TextBlock Text="MACHINE NUMBER" FontSize="12" 
                                       Foreground="#7F8C8D" FontWeight="SemiBold"/>
                            <TextBlock x:Name="txtMachineNumber" Text="MCH-001" 
                                       FontSize="20" FontWeight="Bold" 
                                       Foreground="#2C3E50" Margin="0,5,0,0"/>
                        </StackPanel>

                        <!-- Part Info -->
                        <StackPanel Grid.Column="3" Margin="20,0,0,0">
                            <TextBlock Text="PART NUMBER" FontSize="12" 
                                       Foreground="#7F8C8D" FontWeight="SemiBold"/>
                            <TextBlock x:Name="txtPartNumber" Text="PN-123456" 
                                       FontSize="20" FontWeight="Bold" 
                                       Foreground="#2C3E50" Margin="0,5,0,0"/>
                        </StackPanel>


                    </Grid>
                </Border>

                <!-- Production Metrics -->
                <Grid Grid.Row="1">
                    <!-- Perbesar tabel dengan mengatur kolom -->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <!-- Tabel lebih besar -->
                        <ColumnDefinition Width="*"/>
                        <!-- Shift Performance lebih kecil -->
                    </Grid.ColumnDefinitions>

                    <!-- Left - Hourly Breakdown Table -->
                    <Border Grid.Column="0" Background="White" CornerRadius="10" 
        Padding="30" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="HOURLY BREAKDOWN" FontSize="18" 
                   FontWeight="Bold" Foreground="#2C3E50"
                   Margin="0,0,0,20"/>

                            <!-- Tabel Header -->
                            <Border Background="#F8F9FA" CornerRadius="5" 
                Height="50" Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="JAM" Grid.Column="0" 
                           Style="{StaticResource TableHeaderStyle}"/>
                                    <TextBlock Text="TARGET" Grid.Column="1" 
                           Style="{StaticResource TableHeaderStyle}"/>
                                    <TextBlock Text="AKTUAL" Grid.Column="2" 
                           Style="{StaticResource TableHeaderStyle}"/>
                                </Grid>
                            </Border>

                            <!-- Tabel Tanpa Scroll - Lebih Besar -->
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition Height="50"/>
                                </Grid.RowDefinitions>

                                <!-- Baris 1 -->
                                <Border Style="{StaticResource TableRowStyle}" Grid.Row="0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock x:Name="txtTimeSlot1" Text="07:30 - 08:30" 
                               Style="{StaticResource TableCellStyle}" Grid.Column="0"/>
                                        <TextBlock x:Name="txtTargetSlot1" Text="13" 
                               Style="{StaticResource TableCellStyle}" 
                               Foreground="#3498DB" Grid.Column="1"/>
                                        <TextBlock x:Name="txtActualSlot1" Text="0" 
                               Style="{StaticResource TableCellStyle}" 
                               Foreground="#2ECC71" Grid.Column="2"/>
                                    </Grid>
                                </Border>

                                <!-- Baris 2 -->
                                <Border Style="{StaticResource TableRowStyle}" Grid.Row="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock x:Name="txtTimeSlot2" Text="08:30 - 09:30" 
                               Style="{StaticResource TableCellStyle}" Grid.Column="0"/>
                                        <TextBlock x:Name="txtTargetSlot2" Text="13" 
                               Style="{StaticResource TableCellStyle}" 
                               Foreground="#3498DB" Grid.Column="1"/>
                                        <TextBlock x:Name="txtActualSlot2" Text="0" 
                               Style="{StaticResource TableCellStyle}" 
                               Foreground="#2ECC71" Grid.Column="2"/>
                                    </Grid>
                                </Border>

                                <!-- Baris 3 -->
                                <Border Style="{StaticResource TableRowStyle}" Grid.Row="2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock x:Name="txtTimeSlot3" Text="09:30 - 10:45" 
                               Style="{StaticResource TableCellStyle}" Grid.Column="0"/>
                                        <TextBlock x:Name="txtTargetSlot3" Text="14" 
                               Style="{StaticResource TableCellStyle}" 
                               Foreground="#3498DB" Grid.Column="1"/>
                                        <TextBlock x:Name="txtActualSlot3" Text="0" 
                               Style="{StaticResource TableCellStyle}" 
                               Foreground="#2ECC71" Grid.Column="2"/>
                                    </Grid>
                                </Border>

                                <!-- Baris 4 -->
                                <Border Style="{StaticResource TableRowStyle}" Grid.Row="3">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock x:Name="txtTimeSlot4" Text="10:45 - 11:45" 
                               Style="{StaticResource TableCellStyle}" Grid.Column="0"/>
                                        <TextBlock x:Name="txtTargetSlot4" Text="12" 
                               Style="{StaticResource TableCellStyle}" 
                               Foreground="#3498DB" Grid.Column="1"/>
                                        <TextBlock x:Name="txtActualSlot4" Text="0" 
                               Style="{StaticResource TableCellStyle}" 
                               Foreground="#2ECC71" Grid.Column="2"/>
                                    </Grid>
                                </Border>

                                <!-- Baris 5 -->
                                <Border Style="{StaticResource TableRowStyle}" Grid.Row="4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock x:Name="txtTimeSlot5" Text="11:45 - 13:30" 
                               Style="{StaticResource TableCellStyle}" Grid.Column="0"/>
                                        <TextBlock x:Name="txtTargetSlot5" Text="12" 
                               Style="{StaticResource TableCellStyle}" 
                               Foreground="#3498DB" Grid.Column="1"/>
                                        <TextBlock x:Name="txtActualSlot5" Text="0" 
                               Style="{StaticResource TableCellStyle}" 
                               Foreground="#2ECC71" Grid.Column="2"/>
                                    </Grid>
                                </Border>

                                <!-- Baris 6 -->
                                <Border Style="{StaticResource TableRowStyle}" Grid.Row="5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock x:Name="txtTimeSlot6" Text="13:30 - 14:30" 
                               Style="{StaticResource TableCellStyle}" Grid.Column="0"/>
                                        <TextBlock x:Name="txtTargetSlot6" Text="12" 
                               Style="{StaticResource TableCellStyle}" 
                               Foreground="#3498DB" Grid.Column="1"/>
                                        <TextBlock x:Name="txtActualSlot6" Text="0" 
                               Style="{StaticResource TableCellStyle}" 
                               Foreground="#2ECC71" Grid.Column="2"/>
                                    </Grid>
                                </Border>

                                <!-- Baris 7 -->
                                <Border Style="{StaticResource TableRowStyle}" Grid.Row="6">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock x:Name="txtTimeSlot7" Text="14:30 - 15:30" 
                               Style="{StaticResource TableCellStyle}" Grid.Column="0"/>
                                        <TextBlock x:Name="txtTargetSlot7" Text="12" 
                               Style="{StaticResource TableCellStyle}" 
                               Foreground="#3498DB" Grid.Column="1"/>
                                        <TextBlock x:Name="txtActualSlot7" Text="0" 
                               Style="{StaticResource TableCellStyle}" 
                               Foreground="#2ECC71" Grid.Column="2"/>
                                    </Grid>
                                </Border>

                                <!-- Baris 8 -->
                                <Border Style="{StaticResource TableRowStyle}" Grid.Row="7">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock x:Name="txtTimeSlot8" Text="15:30 - 16:30" 
                               Style="{StaticResource TableCellStyle}" Grid.Column="0"/>
                                        <TextBlock x:Name="txtTargetSlot8" Text="12" 
                               Style="{StaticResource TableCellStyle}" 
                               Foreground="#3498DB" Grid.Column="1"/>
                                        <TextBlock x:Name="txtActualSlot8" Text="0" 
                               Style="{StaticResource TableCellStyle}" 
                               Foreground="#2ECC71" Grid.Column="2"/>
                                    </Grid>
                                </Border>
                            </Grid>

                        </StackPanel>
                    </Border>

                    <!-- Right - Shift Performance (Sederhana) -->
                    <Border Grid.Column="1" Background="White" CornerRadius="10" 
                            Padding="15" Margin="10,0,0,0">
                        <StackPanel>
                            <TextBlock Text="SHIFT PERFORMANCE" FontSize="16" 
                                       FontWeight="Bold" Foreground="#2C3E50"
                                       Margin="0,0,0,15"
                                       HorizontalAlignment="Center"/>

                            <!-- Target per Shift -->
                            <Border Margin="0,0,0,20" Padding="20" 
                                    Background="#F8F9FA" CornerRadius="8">
                                <StackPanel>
                                    <TextBlock Text="TARGET SHIFT" FontSize="12" 
                                               Foreground="#7F8C8D" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="txtTargetShift" Text="100" 
                                               FontSize="32" FontWeight="Bold" 
                                               Foreground="#3498DB"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="units" FontSize="14" 
                                               Foreground="#7F8C8D" 
                                               HorizontalAlignment="Center"
                                               Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Target per Second -->
                            <Border Margin="0,0,0,20" Padding="20" 
                                    Background="#F8F9FA" CornerRadius="8">
                                <StackPanel>
                                    <TextBlock Text="TARGET PER SECOND" FontSize="12" 
                                               Foreground="#7F8C8D" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="txtTargetSecond" Text="0.003" 
                                               FontSize="32" FontWeight="Bold" 
                                               Foreground="#9B59B6"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="units/sec" FontSize="14" 
                                               Foreground="#7F8C8D" 
                                               HorizontalAlignment="Center"
                                               Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Aktual Output -->
                            <Border Margin="0,0,0,0" Padding="20" 
                                    Background="#F8F9FA" CornerRadius="8">
                                <StackPanel>
                                    <TextBlock Text="AKTUAL OUTPUT" FontSize="12" 
                                               Foreground="#7F8C8D" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="txtEfficiency" Text="0" 
                                               FontSize="32" FontWeight="Bold" 
                                               Foreground="#2ECC71"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="units" FontSize="14" 
                                               Foreground="#7F8C8D" 
                                               HorizontalAlignment="Center"
                                               Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>

            <!-- Right Panel - Actions -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Scan Section -->
                <Border Grid.Row="0" Background="White" CornerRadius="10" 
                        Padding="20" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="SCAN PART" FontSize="16" FontWeight="Bold" 
                                   Foreground="#2C3E50" Margin="0,0,0,15"/>

                        <!-- Barcode Input -->
                        <TextBox x:Name="txtBarcode" Height="55" FontSize="16" 
         Style="{StaticResource RoundedTextBoxStyle}"
         Margin="0,0,0,10"
         TextChanged="txtBarcode_TextChanged"
         PreviewKeyDown="txtBarcode_PreviewKeyDown"
         AcceptsReturn="False"
         AcceptsTab="False"
         VerticalContentAlignment="Center"
         HorizontalContentAlignment="Left"
         Padding="15">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter" Command="{Binding ScanCommand}"/>
                            </TextBox.InputBindings>
                        </TextBox>

                        <Button x:Name="btnScan" Height="45" Background="#3498DB" 
                                Foreground="White" FontSize="14" FontWeight="Bold"
                                BorderThickness="0"
                                Style="{StaticResource RoundedButtonStyle}"
                                Content="📷 SCAN BARCODE"
                                Click="btnScan_Click"/>
                    </StackPanel>
                </Border>

                <!-- Actions -->
                <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="20">
                    <StackPanel>
                        <TextBlock Text="ACTIONS" FontSize="16" FontWeight="Bold" 
                                   Foreground="#2C3E50" Margin="0,0,0,15"/>

                        <!-- Edit Part -->
                        <Button x:Name="btnEditPart" 
                                Style="{StaticResource ActionButtonStyle}"
                                Click="btnEditPart_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="✏️" FontSize="16"/>
                                <TextBlock Text="Edit Part Number" FontSize="14" 
                                           Foreground="#2C3E50" 
                                           VerticalAlignment="Center"
                                           Margin="10,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <!-- Download Report -->
                        <Button x:Name="btnDownloadReport" 
                                Style="{StaticResource ActionButtonStyle}"
                                Click="btnDownloadReport_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" FontSize="16"/>
                                <TextBlock Text="Download Report PDF" FontSize="14" 
                                           Foreground="#2C3E50" 
                                           VerticalAlignment="Center"
                                           Margin="10,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <!-- Fullscreen -->
                        <Button x:Name="btnFullscreen" 
                                Style="{StaticResource ActionButtonStyle}"
                                Click="btnFullscreen_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⛶" FontSize="16"/>
                                <TextBlock Text="Toggle Fullscreen" FontSize="14" 
                                           Foreground="#2C3E50" 
                                           VerticalAlignment="Center"
                                           Margin="10,0,0,0"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnUpdateTarget" 
        Style="{StaticResource ActionButtonStyle}"
        Click="btnUpdateTarget_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🎯" FontSize="16"/>
                                <TextBlock Text="Update Target" FontSize="14" 
                   Foreground="#2C3E50" 
                   VerticalAlignment="Center"
                   Margin="10,0,0,0"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Logout Button -->
                <Button x:Name="btnLogout" Grid.Row="2" Height="55" Margin="0,15,0,0"
                        Background="#E74C3C" Foreground="White" FontSize="14" 
                        FontWeight="Bold" BorderThickness="0" 
                        Style="{StaticResource RoundedButtonStyle}"
                        Click="btnLogout_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="🚪" FontSize="16" Margin="0,0,10,0"/>
                        <TextBlock Text="LOGOUT" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Window>