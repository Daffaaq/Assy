<Window x:Class="Assy.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CustomMessageBox"
        Height="250" Width="400"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        BorderThickness="1"
        BorderBrush="#E0E0E0"
        MouseDown="Window_MouseDown">

    <Border x:Name="contentBorder" 
            Background="White" 
            CornerRadius="10" 
            Margin="20">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" BlurRadius="20" Color="#40000000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#F8F9FA" 
                    CornerRadius="10,10,0,0" 
                    Height="50">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Icon -->
                    <Border x:Name="iconBorder" Grid.Column="0" 
                            Width="40" Height="40" 
                            CornerRadius="20" 
                            Margin="15,0"
                            VerticalAlignment="Center">
                        <TextBlock x:Name="txtIcon" FontSize="20" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- Title -->
                    <TextBlock x:Name="txtTitle" Grid.Column="1"
                               Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}"
                               FontSize="16" FontWeight="Bold" 
                               Foreground="#2C3E50"
                               VerticalAlignment="Center"/>

                    <!-- Close Button -->
                    <Button Grid.Column="2" 
                            Style="{StaticResource ModernCloseButton}"
                            Click="BtnCancel_Click"
                            Margin="0,0,15,0"
                            VerticalAlignment="Center"
                            Width="30" Height="30">
                        <TextBlock Text="×" FontSize="18" FontWeight="Bold"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Message -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                          Padding="20">
                <TextBlock x:Name="txtMessage" 
                           TextWrapping="Wrap"
                           FontSize="14"
                           Foreground="#34495E"
                           TextAlignment="Left"
                           LineHeight="20"/>
            </ScrollViewer>

            <!-- Buttons -->
            <Border Grid.Row="2" Background="#F8F9FA" 
                    CornerRadius="0,0,10,10"
                    Padding="20,15">
                <StackPanel x:Name="buttonsPanel" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right">

                    <Button x:Name="btnOK" Content="OK" 
                            Style="{StaticResource ModernDialogButton}"
                            Click="BtnOK_Click"
                            Background="#3498DB"
                            Foreground="White"
                            Width="80"
                            Margin="0,0,10,0"/>

                    <Button x:Name="btnYes" Content="Yes" 
                            Style="{StaticResource ModernDialogButton}"
                            Click="BtnYes_Click"
                            Background="#2ECC71"
                            Foreground="White"
                            Width="80"
                            Margin="0,0,10,0"/>

                    <Button x:Name="btnNo" Content="No" 
                            Style="{StaticResource ModernDialogButton}"
                            Click="BtnNo_Click"
                            Background="#E74C3C"
                            Foreground="White"
                            Width="80"
                            Margin="0,0,10,0"/>

                    <Button x:Name="btnCancel" Content="Cancel" 
                            Style="{StaticResource ModernDialogButton}"
                            Click="BtnCancel_Click"
                            Background="#95A5A6"
                            Foreground="White"
                            Width="80"/>

                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>